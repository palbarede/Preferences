! Xdefaults
!
! riferimenti:
! http://mkaz.com/ref/XTerm_colors.html
! http://gentoo-wiki.com/TIP_Linux_Colors_in_Aterm/rxvt
! http://spatof.org/doc/guida_XTerm.txt
!
! rxvt-unicode, urxvt

! From: http://wiki.archlinux.org/index.php/Urxvt

URxvt.buffered: true
URxvt.background: black
URxvt.foreground: white
URxvt.cursorColor: green
URxvt.underlineColor: yellow
URxvt.font: xft:Terminus:pixelsize=14:antialias=false
URxvt.boldFont: xft:Terminus:bold:pixelsize=14:antialias=false
!URxvt.perl-ext-common: default,tabbed,matcher
! tolgo searchable-scrollback perche' conflitta con alt+s di zsh/sudo
URxvt.perl-ext-common: default,matcher,-searchable-scrollback
! URxvt.title: rxvt-unicode

! my settings
URxvt.saveLines: 2000
URxvt.visualBell: True
! sembra che depth 32 causi problemi
! URxvt.depth: 32
URxvt.urlLauncher: /usr/bin/firefox
URxvt.matcher.button: 1
URxvt.scrollBar: False
! URxvt.modifier: alt
! URxvt.meta8: False
URxvt.loginShell: True

! COLORS
URxvt.background:  gray4
URxvt.foreground:  FloralWhite

! black
URxvt.color0:      black
! red
URxvt.color1:      tomato2
! green
URxvt.color2:      SeaGreen3
! yellow
URxvt.color3:      gold1
! blue
URxvt.color4:      LightSkyBlue3
! magenta
URxvt.color5:      DeepPink2
! cyan
URxvt.color6:      LightSkyBlue
! white
URxvt.color7:      FloralWhite

! bright black
URxvt.color8:      gray5
! bright red
URxvt.color9:      brown1
! bright green
URxvt.color10:     chartreuse2
! bright yellow
URxvt.color11:     khaki1
! bright blue
URxvt.color12:     DodgerBlue2
! bright magenta
URxvt.color13:     VioletRed1
! bright cyan
URxvt.color14:     MediumTurquoise
! bright white
URxvt.color15:     white

! xterm
! !!!!!

XTerm*dynamiccolors: true 

! XTerm*font:-xos4-terminus-medium-r-normal--13-140-72-72-c-80-iso8859-15
XTerm*font:-xos4-terminus-medium-r-normal--16-160-72-72-c-80-iso8859-15
!XTerm*vt100*geometry: 80x50
XTerm*saveLines: 2000
XTerm*charClass: 33:48,35:48,37:48,43:48,45-47:48,64:48,95:48,126:48,35:48
! Se cambi TERM a XTerm-color non funziona il backspace...
! XTerm*termName: xterm-color
XTerm*eightBitInput: false
XTerm*visualBell: True
! Do not clear the screen after the program exits
XTerm*VT100*titeInhibit: true
XTerm*pointerColor: red
XTerm*pointerColorBackground: white 
XTerm*cursorColor: grey
XTerm*scrollBar: false


XTerm*background:  gray4
XTerm*foreground:  FloralWhite

