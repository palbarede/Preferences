# tig configuration file
# See also: /usr/local/opt/tig/share/tig/examples/tigrc

set ignore-case = yes
set tab-size = 4
set main-view = line-number:no,interval:5 id:yes date:relative author:abbreviated commit-title:yes,graph,refs,overflow=no

# Jump the line like vim
bind main g move-first-line
bind main G move-last-line
