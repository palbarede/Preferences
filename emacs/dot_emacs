; il mio .emacs, per iniziare a capirci qualcosa...

; Aggiungo al load-path:
(add-to-list 'load-path "~/Preferences/emacs.d")
; Aggiungo tutte le subdir che trovo (da ryan-emacs-env)
(progn (cd "~/Preferences/emacs.d") (normal-top-level-add-subdirs-to-load-path))

; da jaromil:

; IDO lets you  open files  and  switch buffers  with fuzzy  matching,
; really nice when you have lots of things open.
; http://www.emacsblog.org/2008/05/19/giving-ido-mode-a-second-chance/
(require 'ido)
(ido-mode t)
(setq ido-enable-flex-matching t)


; color-themes
(require 'color-theme)
(color-theme-initialize)
(load "~/Preferences/emacs.d/color-theme-molokai.el")
(load "~/Preferences/emacs.d/color-theme-blackboard.el")
(load "~/Preferences/emacs.d/pigerrimitudo.el")


; Se siamo con un window system usa un tema chiaro, mentre in terminale usa uno scuro.
(if window-system
    (color-theme-blippblopp)
  (color-theme-arjen))

; Decenti per GUI (OSX):
; Greiner, Infodoc, BlippBlopp, GTK-IDE, 


(autoload 'python-mode "python-mode" "Python Mode." t)
(add-to-list 'auto-mode-alist '("\\.py\\'" . python-mode))
(add-to-list 'interpreter-mode-alist '("python" . python-mode))

; Navigazione dei TAB (come un browser web)
; C-tab -> next tab/buffer
; S-C-tab -> previous tab/buffer
(global-set-key (kbd "<C-tab>") 'next-tab-or-buffer)
(global-set-key (kbd "<S-C-tab>") 'previous-tab-or-buffer)

; cose da installare per python:
; pymacs -> http://pymacs.progiciels-bpi.ca/ (python)
; rope -> http://rope.sourceforge.net/index.html (python)
; ropemode -> http://pypi.python.org/pypi/ropemode (?)
; ropemacs -> http://rope.sourceforge.net/ropemacs.html (emacs?)

; Text-mode di default:
(setq default-major-mode 'text-mode)
