# ===============================================================
# ~/.zsh/os/linux
# ---------------------------------------------------------------

# -*- aliases
alias ls="ls --color=auto $ls_opts"

if (( ! $+commands[gnome-open] )); then
	alias gnome-open='echo quei rottinculo di GNOME hanno deciso che ora si chiama gvfs-open, gli morisse la gente attorno'
fi

# locate/updatedb solo per la $HOME
if (( $+commands[updatedb] )); then
    alias my_updatedb='updatedb -l 0 -o ~/.updatedb -U $HOME -e /,~/.cpan'
    alias my_locate='locate -d ~/.updatedb'
fi

alias grep='grep --color=auto'

if [ -e /etc/arch-release ]; then
    # Arch Linux
    alias p='pacman'
    alias search='pacman -Ss'
    alias show='pacman -Si'
    alias i='sudo pacman -S'

elif [ -e /etc/debian_version ]; then
    alias search="apt-cache search"
    alias show="apt-cache show"
    alias i="sudo aptitude install"
    alias backports="sudo aptitude -t lenny-backports"
fi

# LS_COLORS
(( $+commands[dircolors] )) && eval $(dircolors -b ~/Preferences/dircolors.256dark)

# -*- environment

# vim: ft=zsh
